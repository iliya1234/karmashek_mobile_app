<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinanceApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/green_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="ButtonPrimary">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/green_primary</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:layout_width">@dimen/btn_weight</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/standard_dimen</item>
        <item name="android:layout_marginRight">@dimen/standard_dimen</item>
        <item name="android:layout_marginLeft">@dimen/standard_dimen</item>
    </style>

    <style name="EditTextPrimary">
        <item name="android:layout_width">@dimen/btn_weight</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/standard_dimen</item>
        <item name="android:layout_marginRight">@dimen/standard_dimen</item>
        <item name="android:layout_marginLeft">@dimen/standard_dimen</item>
        <item name="backgroundTint">@color/green_primary</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="TextViewHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/standard_header_tv</item>
        <item name="android:layout_margin">@dimen/standard_dimen</item>
        <item name="android:textColor">@color/swampy</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:background">@color/green_primary</item>
        <item name="itemRippleColor">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/icons_color</item>
    </style>
</resources>